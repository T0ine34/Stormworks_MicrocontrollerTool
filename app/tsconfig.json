{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceRoot": "/src",
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "exclude": [
        "node_modules"
    ]
}